<!--
  This layout is for 480x272 screen, however any similar proportions
  will work fine by using DPI automatic scaling
-->
<ui>
  <section name="General">
    <grid rows="60,100,60" cols="150,170,150">
      <item/>
      <item id="FuelEconomy_trip" size='large' type='chart'  precision='1'/>
      <item id="FuelEconomy_short" size='normal' type='chart'  precision='1'/>

      <item id="RPM" size='large' type='roverbar'/>
      <item id="Speed" size='giant' type='roverbar' period='1000'/>
      <item id="ShiftPosition" size='huge' type='text' period='4000'/>

      <item id="CoolantTemp" size='large' type='text' period='10000'/>
      <item id="IntakeAirTemp" size='small' type='text' period='10000'/>
      <item id="AirTemp" size='normal' type='text' period='10000'/>
    </grid>
  </section>

  <section name="Trip computer">
    <grid rows="60,100,60" cols="150,170,150">
      <item id="TripTime"/>
      <item id="IdleTime"/>
      <item id="LitersPerHour" period='1000' precision='1'/>

      <item id="FuelEconomy_instant" size='large' type='chart' precision='1'/>
      <item id="FuelEconomy_trip" size='giant' type='chart'  precision='1'/>
      <item id="FuelEconomy_short" size='large' type='chart'  precision='1'/>

      <item id="CoolantTemp" size='small' type='text' period='10000'/>
      <item id="DistanceRun" size='large' type='roverbar' period='10000' precision='3'/>
      <item id="FuelConsumed" size='large' type='text' precision='3'/>
    </grid>
  </section>

  <section name="Sensors">
    <grid rows="60,100,60" cols="150,170,150">
      <item id="STFT1" size='large' type='barchart'/>
      <item id="LTFT1" size='large' type='barchart'/>
      <item id='RunTime' size='large'/>

      <item id='Oxygen_b1s1' size='large' precision='1'/>
      <item id='Oxygen_b1s2' size='large' precision='1'/>
      <item id='MAF' size='large'/>

      <item id='Oxygen_b1s1_stft' size='large'/>
      <item id='Oxygen_b1s2_stft' size='large'/>
      <item id='ThrottlePosition' size='large'/>
    </grid> 
  </section>

<ui>
