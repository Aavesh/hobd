<!--
  This layout is for 480x272 screen, however any similar proportions
  will work fine by using DPI automatic scaling
-->
<ui>
  <section name="General Info">
    <grid rows="60,100,50" cols="150,150,150">
      <item id="RPM" size='large' type='roverbar'/>
      <item id="ShiftPosition" size='small' type='text' period='4000'/>
      <item id="FuelConsumption_short" size='small' type='chart' period='1000'/>

      <item/>
      <item id="Speed" size='huge' type='roverbar' period='1000'/>
      <item/>

      <item id="CoolantTemp" size='small' type='text' period='10000'/>
      <item id="IntakeAirTemp" size='small' type='text' period='10000'/>
      <item id="AirTemp" size='normal' type='text' period='10000'/>
    </grid>
  </section>

  <section name="Trip computer">
    <grid rows="60,100,60" cols="150,150,150">
      <item id="CoolantTemp" size='small' type='text' period='10000'/>
      <item id="EngineLoad" size='small' type='text' period='1000'/>
      <item id="LitersPerHour" period='1000' precision='1'/>

      <item id="FuelConsumption_instant" size='normal' type='chart'/>
      <item id="FuelConsumption_trip" size='huge' type='chart'/>
      <item id="FuelConsumption_short" size='normal' type='chart'/>

      <item id="DistanceRun" size='small' type='roverbar' period='10000'/>
      <item/>
      <item id="FuelConsumed" size='small' type='text'/>
    </grid>
  </section>

  <section name="Sensors">
    <grid rows="60,100,60" cols="150,150,150">
      <item id="STFT1" size='normal' type='barchart'/>
      <item id="LTFT1" size='normal' type='barchart'/>
      <item/>

      <item id="FuelConsumption_instant" size='normal' type='chart'/>
      <item id="FuelConsumption_trip" size='huge' type='chart'/>
      <item id="FuelConsumption_short" size='normal' type='chart'/>

      <item id="DistanceRun" size='small' type='roverbar'/>
      <item/>
      <item id="FuelConsumed" size='small' type='text'/>
    </grid>
  </section>

<ui>
